{
  "name": "eleventy-boilerplate",
  "version": "0.1.0",
  "description": "A starter template to build websites with Webpack and Eleventy.",
  "browserslist": "last 2 years and > 0.5%, ie 11",
  "scripts": {
    "dev": "yarn clean && run-p dev:*",
    "dev:assets": "APP_ENV=development webpack --mode production --watch",
    "dev:site": "eleventy --serve",
    "build": "run-s clean build:fontagon build:assets build:site",
    "build:assets": "webpack --mode production",
    "build:site": "eleventy",
    "build:fontagon": "node libs/fontagon",
    "clean": "rm -rf ./dist",
    "lint:js": "./node_modules/.bin/eslint \"src/assets/**/*.js\"",
    "lint:styles": "stylelint \"src/assets/**/*.scss\"",
    "fix:js": "yarn lint:js --fix",
    "fix:styles": "yarn lint:styles --fix",
    "postinstall": "cd libs/fontagon && yarn install && cd ../../"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uuki/eleventy-boilerplate.git"
  },
  "keywords": [
    "11ty",
    "webpack",
    "sass",
    "handlebars",
    "boilerplate",
    "eleventy-boilerplate"
  ],
  "author": "uuki <uuki.dev@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/uuki/eleventy-boilerplate#readme",
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-img": "^0.8.0",
    "@babel/core": "^7.13.8",
    "@babel/eslint-parser": "^7.13.8",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.8",
    "@fullhuman/postcss-purgecss": "^4.0.2",
    "autoprefixer": "9.8.6",
    "babel-loader": "^8.2.2",
    "core-js": "3",
    "css-loader": "4",
    "cssnano": "^4.1.10",
    "eslint": "^7.21.0",
    "eslint-loader": "^4.0.2",
    "handlebars-helpers": "^0.10.0",
    "html-minifier": "^4.0.0",
    "import-glob-loader": "^1.1.0",
    "js-yaml": "^4.0.0",
    "license-info-webpack-plugin": "^3.0.0",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.12.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-loader": "4.2.0",
    "postcss-sass": "^0.4.4",
    "sass-loader": "10.1.1",
    "sharp": "^0.27.2",
    "style-loader": "^2.0.0",
    "stylelint": "13.11.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.19.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "4.46.0",
    "webpack-cli": "^4.5.0",
    "webpack-manifest-plugin": "2.2.0"
  },
  "engines": {
    "node": ">=12.19"
  }
}
